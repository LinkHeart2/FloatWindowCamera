        <!--android:id="@+id/percent"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:gravity="center"-->
        <!--android:textColor="#ffffff"-->
        <!--/>-->

</RelativeLayout>